{
  "name": "familyoffice",
  "version": "1.0.0",
  "description": "AI-powered stock research desktop application",
  "main": "dist-electron/main/index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:electron && npm run copy-codex && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "copy-codex": "mkdir -p dist-electron/vendor/aarch64-apple-darwin/codex && rm -f dist-electron/vendor/aarch64-apple-darwin/codex/codex && cp /opt/homebrew/bin/codex dist-electron/vendor/aarch64-apple-darwin/codex/codex && chmod +x dist-electron/vendor/aarch64-apple-darwin/codex/codex",
    "preview": "vite preview",
    "package": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "start": "npm run build && electron .",
    "electron": "electron ."
  },
  "dependencies": {
    "@fontsource/inter": "^5.0.16",
    "@iarna/toml": "^2.2.5",
    "@openai/codex-sdk": "^0.46.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "fix-path": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-markdown": "10.1.0",
    "rehype-raw": "7.0.0",
    "rehype-sanitize": "6.0.0",
    "remark-gfm": "4.0.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.familyoffice.research",
    "productName": "familyoffice",
    "mac": {
      "category": "public.app-category.finance",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  }
}
