{
  "name": "familyoffice-gui",
  "version": "1.0.0",
  "description": "Desktop GUI for Family Office Stock Research Agent",
  "main": "dist-electron/main/index.js",
  "author": "Jonathan",
  "license": "ISC",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:electron && npm run copy-codex && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "copy-codex": "mkdir -p dist-electron/vendor/aarch64-apple-darwin/codex && rm -f dist-electron/vendor/aarch64-apple-darwin/codex/codex && cp /opt/homebrew/bin/codex dist-electron/vendor/aarch64-apple-darwin/codex/codex && chmod +x dist-electron/vendor/aarch64-apple-darwin/codex/codex",
    "preview": "vite preview",
    "start": "npm run build:electron && npm run copy-codex && electron .",
    "package": "npm run build && electron-builder --mac --dir",
    "dist": "npm run build && electron-builder --mac"
  },
  "keywords": [
    "electron",
    "stock-research",
    "ai",
    "family-office",
    "finance"
  ],
  "dependencies": {
    "@fontsource/inter": "^5.0.16",
    "@openai/codex-sdk": "^0.46.0",
    "commander": "^11.0.0",
    "dotenv": "^16.0.0",
    "fix-path": "5.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "10.1.0",
    "rehype-raw": "7.0.0",
    "rehype-sanitize": "6.0.0",
    "remark-gfm": "4.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "28.0.6",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.familyoffice.research",
    "productName": "Family Office Research",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "window": {
        "width": 540,
        "height": 380
      }
    }
  }
}
